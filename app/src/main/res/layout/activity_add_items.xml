<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    tools:context=".AddItems">


    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/cardview_light_background"
        android:onClick="add"
        android:text="Add"
        android:textColor="#101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/stockEt"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/stockEt"
        app:layout_constraintTop_toBottomOf="@+id/stockEt"
        app:layout_constraintVertical_bias="0.007" />

    <EditText
        android:id="@+id/stockEt"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/button"
        android:ems="10"
        android:gravity="center"
        android:hint="Stock"
        android:inputType="textPersonName"
        android:textColor="#101010"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/sacEt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sacEt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sacEt"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/button"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:gravity="center"
        android:hint="Sac/hsn"
        android:inputType="textPersonName"
        android:textColor="#101010"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/priceEt"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/button"
        android:ems="10"
        android:gravity="center"
        android:hint="Price"
        android:inputType="textPersonName"
        android:textColor="#101010"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/sacEt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sacEt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemnameEt"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button"
        android:ems="10"
        android:gravity="center"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:textColor="#101010"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/sacEt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sacEt"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>